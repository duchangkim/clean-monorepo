{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "application/presentation-react/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "fix": true,
        "cache": true,
        "eslintConfig": "application/presentation-react/.eslintrc.json",
        "lintFilePatterns": ["application/presentation-react/**/*.ts", "application/presentation-react/**/*.tsx"]
      }
    },
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "index": "application/presentation-react/public/index.html",
        "main": "application/presentation-react/src/index.tsx",
        "tsConfig": "application/presentation-react/tsconfig.json",
        "outputPath": "application/presentation-react/dist",
        "webpackConfig": "application/presentation-react/config/webpack.config.js",
        "maxWorkers": 8,
        "scripts": [],
        "buildLibsFromSource": true,
        "assets": [
          {
            "input": "application/presentation-react/public/static",
            "glob": "**/*",
            "output": "static"
          }
        ]
      },
      "configurations": {
        "prod": {
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "extractCss": true,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        },
        "dev": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "options": {
        "buildTarget": "presentation-react:build",
        "hmr": true,
        "port": 3000
      },
      "configurations": {
        "prod": {
          "buildTarget": "presentation-react:build:prod"
        },
        "dev": {
          "buildTarget": "presentation-react:build:dev"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}
