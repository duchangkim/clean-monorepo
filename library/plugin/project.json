{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "library/plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/library/plugin",
        "main": "library/plugin/src/index.ts",
        "tsConfig": "library/plugin/tsconfig.lib.json",
        "assets": [
          "library/plugin/*.md",
          {
            "input": "./library/plugin/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./library/plugin/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./library/plugin",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./library/plugin",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "library/plugin/**/*.ts",
          "library/plugin/generators.json",
          "library/plugin/executors.json",
          "library/plugin/package.json"
        ],
        "fix": true
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/library/plugin"],
      "options": {
        "jestConfig": "library/plugin/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
