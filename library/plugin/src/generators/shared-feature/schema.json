{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "SharedFeature",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "2개 이상 프로젝트에서 사용될 기능 라이브러리 이름",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?",
      "pattern": "^[a-zA-Z].*$"
    },
    "libraryType": {
      "type": "string",
      "description": "라이브러리 타입",
      "alias": "l",
      "x-prompt": {
        "message": "라이브러리 타입",
        "type": "list",
        "items": [
          { "value": "feature", "label": "feature" },
          { "value": "state-management", "label": "state-management" },
          { "value": "ui", "label": "ui" },
          { "value": "util", "label": "util" },
          { "value": "domain", "label": "domain" },
          { "value": "repository", "label": "repository" },
          { "value": "di", "label": "di" }
        ]
      }
    },
    "tags": {
      "type": "string",
      "description": "type:feature 태그 외 추가로 입력할 Tags",
      "alias": "t"
    }
  },
  "required": ["name"]
}
