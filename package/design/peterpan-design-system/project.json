{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "package/design/peterpan-design-system/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/package/design/peterpan-design-system",
        "main": "package/design/peterpan-design-system/src/index.ts",
        "tsConfig": "package/design/peterpan-design-system/tsconfig.lib.json",
        "assets": [
          "package/design/peterpan-design-system/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "package/design/peterpan-design-system/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/package/design/peterpan-design-system"
      ],
      "options": {
        "jestConfig": "package/design/peterpan-design-system/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
