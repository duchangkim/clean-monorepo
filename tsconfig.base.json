{
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@peterpan/react-example-ui-counter-card": ["library/react-example/ui/counter-card/src/index.ts"],
      "@peterpan/react-example/constant": ["library/react-example/constant/src/index.ts"],
      "@peterpan/react-example/data-access": ["library/react-example/data-access/src/index.ts"],
      "@peterpan/react-example/feature/counter-list": ["library/react-example/feature/counter-list/src/index.ts"],
      "@peterpan/react-example/feature/start": ["library/react-example/feature/start/src/index.ts"],
      "@peterpan/shared-core-di": ["library/shared/core/di/src/index.ts"],
      "@peterpan/shared-core-domain": ["library/shared/core/domain/src/index.ts"],
      "@peterpan/shared-core-repository": ["library/shared/core/repository/src/index.ts"],
      "@peterpan/shared/asset/*": ["library/shared/asset/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
